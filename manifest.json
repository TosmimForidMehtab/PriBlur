{
  "manifest_version": 3,
  "name": "PriBlur",
  "version": "1.0.0",
  "description": "Blur parts of your screen during screen sharing to protect sensitive information. Simple, modern, and secure.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "toggle-peek": {
      "suggested_key": {
        "default": "Alt+P",
        "mac": "Alt+P"
      },
      "description": "Toggle peek mode"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content/content.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}